extends ../layout

block content
    .container
        .row
           .col-xs-7
               embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle" type="application/x-shockwave-flash")
           .col-xs-5
               dl.dl-horizontal
               dt 电影名
               dd = movie.title
               dt 导演
               dd = movie.doctor
               dt 语言
               dd = movie.language
               dt 上映年份
               dd = movie.year
